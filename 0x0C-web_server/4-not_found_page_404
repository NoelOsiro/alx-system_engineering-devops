#!/usr/bin/env bash

# Check if the script is running as root
if [[ $EUID -ne 0 ]]; then
    echo "This script must be run as root." >&2
    exit 1
fi

# Install Nginx if not already installed
apt-get update
apt-get install -y nginx

# Create a configuration file for the custom 404 page
cat <<EOL > /etc/nginx/sites-available/custom_404
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }

    error_page 404 /404.html;
    location = /404.html {
        internal;
        root /var/www/html;
        echo "Ceci n'est pas une page" > /var/www/html/404.html;
    }
}
EOL

# Create a symbolic link to enable the site
ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Remove the default configuration (if it exists)
rm -f /etc/nginx/sites-enabled/default

# Restart Nginx
service nginx restart

# Print a message indicating the configuration is complete
echo "Nginx custom 404 page configured successfully."
