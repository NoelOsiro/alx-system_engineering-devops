#!/usr/bin/env bash
# Usage: ./1-world_wide_web <domain> <subdomain>
# Display information about subdomains.

domain_information () {
    local subdomain="$2"
    local domain="$1"

    local dig_output
    dig_output=$(dig "$subdomain.$domain" +short | grep -A1 'ANSWER SECTION:')

    if [ -n "$dig_output" ]; then
        local record_type
        record_type=$(echo "$dig_output" | awk 'NR==1{if (/\./) print "CNAME"; else print "A"}')

        local destination
        destination=$(echo "$dig_output" | awk 'NR==2{print}')

        echo "The subdomain $subdomain is a $record_type record and points to $destination"
    else
        echo "No information found for subdomain $subdomain"
    fi
}

if [ "$#" -eq 1 ]; then
    subdomains=("www" "lb-01" "web-01" "web-02")
    for sub in "${subdomains[@]}"; do
        domain_information "$1" "$sub"
    done
elif [ "$#" -eq 2 ]; then
    domain_information "$1" "$2"
else
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi
